extends layout

block content
  .row.page-header.list-page-header
    h1= pageHeader.title
    p= pageHeader.strapline
    .error= message
  table.table.table-striped.table-responsive
    thead.thead-inverse
      th
        a(href="/exhibitors?sort=exhibitor") Exhibitor
      th
        a(href="/exhibitors?sort=booth") Booth
    tbody
      each item in exhibits
        tr
          td
            a(href="/exhibit/read/" + item._id)= item.exhibitor
          td
            a(href="/exhibit/read/" + item._id)= item.booth