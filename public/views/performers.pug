extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
      p= pageHeader.strapline
      .error= message
  form
    table.table.table-striped.table-responsive
      thead.thead-inverse
        th
          a(href='/performers?sort=performerName') Performer
        th
          a(href='/performers?sort=performerDirector') Director
        th
          a(href='/performers?sort=performerInstitution') Institution
        th location
        th Email
        th Title
      tbody
        each item in events
          tr
            td
              a(href='/event/' + item._id)= item.performerName
            td= item.performerDirector
            td= item.performerInstitution
            td= item.performerCity + " " + item.performerState
            td= item.performerEmail
            td
              a(href='/event/' + item._id)= item.title